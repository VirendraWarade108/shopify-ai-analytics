source "https://rubygems.org"

ruby "3.3.10"

# Core Rails framework - Latest version
gem "rails", "~> 8.0.0"

# Database
gem "sqlite3", "~> 2.4"

# Web server - Updated
gem "puma", "~> 6.5"

# Shopify API client - Latest version
gem "shopify_api", "~> 14.11"

# Encryption for sensitive data - Updated
gem "lockbox", "~> 1.4"

# HTTP client - Latest
gem "faraday", "~> 2.14"

# CORS support - Updated
gem "rack-cors", "~> 2.0"

# JSON serialization
gem "jbuilder", "~> 2.14"

# Environment variables
gem "dotenv-rails", "~> 3.1"

# Reduces boot times through caching
gem "bootsnap", "~> 1.20", require: false

group :development, :test do
  # Debugging
  gem "debug", "~> 1.11", platforms: %i[ mri mingw x64_mingw ]
  gem "pry-rails", "~> 0.3"
  gem "rspec-rails", "~> 7.1"
end

group :development do
  # Performance profiling
  gem "rack-mini-profiler", "~> 3.3"
  
  # Static analysis
  gem "rubocop", "~> 1.69", require: false
  gem "rubocop-rails", "~> 2.27", require: false

  # Windows-specific gems
  gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw]
  gem "wdm", ">= 0.1.0", platforms: [:mingw, :mswin, :x64_mingw]
end